.chat-side
  .chat-user
    %h5
      = current_user.name
    .chat-user__actions
      = link_to new_group_path, class: "chat-user__action" do
        %i.fa.fa-pencil-square-o
      = link_to edit_user_path(current_user), class: "chat-user__action" do
        %i.fa.fa-gear

  %ul.chat-groups
    - groups.each do |group|
      = link_to group_path(group), class: "chat-group__link" do
        %li.chat-group
          %p.chat-group__name
            = group.name
          %p.chat-group__message messages
