.chat
  .chat-side
    .chat-user
      %h5 sumizaki
      .chat-user__actions
        %a.chat-user__action
          %i.fa.fa-pencil-square-o
          %i.fa.fa-gear

    %ul.chat-groups
      %li.chat-group
        %a.chat-group__link
          %p.chat-group__name sample
          %p.chat-group__message test
      %li.chat-group
        %a.chat-group__link
          %p.chat-group__name sample2
          %p.chat-group__message まだメッセージはありません。
      %li.chat-group
        %a.chat-group__link
          %p.chat-group__name sample3
          %p.chat-group__message まだメッセージはありません。
      %li.chat-group
        %a.chat-group__link
          %p.chat-group__name sample4
          %p.chat-group__message まだメッセージはありません。

  .chat-main
    .chat-header
      .chat-header--left
        %h2 sample
        %p.chat-header__users
          Members:
          %span.chat-header__user sumizaki
          %span.chat-header__user zak
          %span.chat-header__user aaa
          %span.chat-header__user bbb
      .chat-header--right
        %a.chat-header__edit-btn edit

    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user sumizaki
            %p.chat-message__time 2017/01/15 09:15:08
          %p.chat-message__body test
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user sumizaki
            %p.chat-message__time 2017/01/15 10:15:08
          %p.chat-message__body hello
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user zak
            %p.chat-message__time 2017/01/15 11:15:08
          %p.chat-message__body hello world
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user aaa
            %p.chat-message__time 2017/01/15 12:15:08
          %p.chat-message__body sample
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user bbb
            %p.chat-message__time 2017/01/15 13:15:08
          %p.chat-message__body hi!
        %li.chat-message
          .chat-main-message__header
            %p.chat-message__user sumizaki
            %p.chat-message__time 2017/01/16 09:15:08
          %p.chat-message__body test

    .chat-footer
      %form.new_message{ action: "/messages", method: "post"}
        .chat-footer__body
          %textarea{ row: "1", placeholder: "type a message"}
          %label.chat-footer__file
            %input#message_image{ name: "message[image]", type: "file"}
            %i.fa.fa-image
        %input{type: "submit", value: "Send"}