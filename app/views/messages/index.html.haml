.chat
  = render partial: "groups/side", locals: { groups: @groups }

  .chat-main
    .chat-header
      .chat-header--left
        %h2
          = @group.name
        %p.chat-header__users
          Members:
          = render @group.users

      .chat-header--right
        = link_to 'Edit', edit_group_path(@group), class: "chat-header__edit-btn"

    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header
            %p.chat-message__user sumizaki
            %p.chat-message__time 2017/01/15 09:15:08
          %p.chat-message__body test

    .chat-footer
      %form.new_message{ action: "", method: "post"}
        .chat-footer__body
          %textarea#message_body{ name: "message[body]", placeholder: "type a message"}
          %label.chat-footer__body__file
            %input#message_image{ name: "message[image]", type: "file"}
            %i.fa.fa-image
        %input.submit_btn{type: "submit", value: "Send"}